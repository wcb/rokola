!!! XML
!!! Strict
%html{html_attrs('en-en')}
  %head
    %title rokola
    %link{:rel => "stylesheet", :href => "stylesheet.css", :type => "text/css"}
    %script{:type => "text/javascript", :src => "mootools-1.2.4-core-yc.js"}
    %script{:type => "text/javascript", :src => "script.js"}
  %body
    #background{:style => "background-image: url('#{@splash}')"}
      #shade
        #wrapper
          #header
            #logo
              %h1 rokola
            #status
              %h2 Now Playing
              - unless @song.nil?
                #cover
                  %img#song_cover{:src => "test.png"}
                #details
                  %p#song_title #{@song.title}
                  %p.lesser#song_artist #{@song.artist}
                  %p.lesser#song_album #{@song.album}
              - else
                #details
                  %h3#song_title There are no songs playing at the moment. 
              - unless @next_song.nil?
                #upnext
                  %span.strong Up Next: 
                  %span #{@next_song.title} by
                  %span #{@next_song.artist}
          %div.clear
          #suggest
            %h1 suggest
            #artistlist
            %h2 Pink Floyd
            .album
              %h3 Dark Side of The Moon
              %ol
                %li First Song
                %li Second Song
